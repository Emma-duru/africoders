<%- include("./partials/header") %>

    <div class="container my-4">
        <div class="row">
            <div class="col-lg-3 mb-4">
                <div class="card">
                    <div class="card-body text-center p-4">
                        <img src="https://images.unsplash.com/photo-1503023345310-bd7c1de61c7d?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8aHVtYW58ZW58MHx8MHw%3D&ixlib=rb-1.2.1&w=1000&q=80" style="height: 100px;" alt="">
                        <div class="my-3">
                            <h4 class="card-title">Username</h4>
                            <p class="text-muted">Joined Feb 17, 2021</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center"><%= post.title %> </h3>
                    </div>
                    <div class="card-body p-4">
                        <%= post.body %> 
                    </div>
                    <div class="card-footer text-muted">
                        <a href="/<%= post.slug %>/edit " class="btn btn-primary">Edit Post</a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>


    <!-- Button trigger modal -->
    

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this post?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="delete-btn" class="btn btn-danger">Delete</button>
            </div>
            </div>
        </div>
    </div>

    <script>
        const deleteBtn = document.getElementById("delete-btn");
        deleteBtn.addEventListener("click", async() => {
            try {
                const res = await fetch("/<%= post.slug %>", {
                    method: "DELETE"
                })
                const data = await res.json()
                if (data.post) {
                    location.assign("/")
                }
            } catch (error) {
                console.log(error)
            }
        })
    </script>
    
<%- include("./partials/footer") %>